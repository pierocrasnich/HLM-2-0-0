# ----- Status Object ------------------------------------------------------------------------------------------------ #
<StatusObject>:
    size_hint: None, None
    size: 10, 10
    canvas:
        Color:
            rgba: GV.RGBA_ERROR if self.running == False else GV.RGBA_SUCCESS
        Ellipse:
            size: self.size
            pos: self.pos
        Color:
            rgba: GV.RGBA_BLACK
        Line:
            width: 1
            circle: self.x + 5, self.y + 5, 6

# ----- Voice Spinner and Spinner Option ----------------------------------------------------------------------------- #
<VoiceSpinner>:
    size_hint: None, None
    size: 150, 28
    background_normal: ''
    background_color: GV.RGBA_BG_LIGHT
    disabled: True
    opacity: 0
    canvas:
        Color:
            rgba: GV.RGBA_BG_DARK
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1

<VoiceSpinnerOption>:
    size_hint: None, None
    size: 150, 28
    background_normal: ''
    background_color: GV.RGBA_BG_LIGHT
    canvas:
        Color:
            rgba: GV.RGBA_BG_DARK
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1.2