# _ssc_
<LoaderCreateCollection>
    size: 400, 80
    size_hint: None, None
    pos_hint: {'center_x': .5, 'center_y': .35}
    ssc_loader_progress_bar : _ssc_loader_progress_bar
    ssc_loader_description: _ssc_loader_description
    ssc_loader_num: _ssc_loader_num
    BoxLayout:
        orientation: 'vertical'
        size: 400, 80
        size_hint: None, None
        pos: self.pos
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 400, 30
            pos: self.pos
            Label:
                id: _ssc_loader_description
                size_hint: None, None
                size: 200, 30
                font_size: 14
                text_size: self.size
                text: '???'
                valign: 'bottom'
                halign: 'left'
                padding: 20, 0
                color: GV.RGBA_WHITE
            Label:
                id: _ssc_loader_num
                size_hint: None, None
                size: 200, 30
                font_size: 14
                text_size: self.size
                text: '???'
                valign: 'bottom'
                halign: 'right'
                padding: 20, 0
                color: GV.RGBA_WHITE
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 400, 50
            pos: self.pos
            padding: 20, 0
            ProgressBar:
                id: _ssc_loader_progress_bar
                max: 0
                value: 0


