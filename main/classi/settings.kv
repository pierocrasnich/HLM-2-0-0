# ----- Classe grafica Label settings ----- #
<TitleLabel@Label>:
    size_hint: None, None
    size: 200, 50
    font_size: 20
    text_size: self.size
    markup: True

<VoiceLabel@Label>:
    size_hint: None, None
    size: 450, 30
    font_size: 18
    text_size: self.size
    markup: True
    text: ''

<PLCLabel>:
    size_hint: None, None
    size: 260, 16
    font_size: 12
    text_size: self.size
    markup: True
    text: ''

<InputLabelSettings>:
    size_hint: None, None
    size: 750, 20
    font_size: 14
    text_size: self.size
    markup: True
    text: ''

<VoiceTextInput@TextInput>:
    opacity: 0
    size_hint: None, None
    size: 450, 28
    font_size: 14
    text: ''
    multiline: False
    disabled: True
    background_normal: ''
    background_color: GV.RGBA_WHITE


# ----- Status Object ------------------------------------------------------------------------------------------------ #
<StatusObject>:
    size_hint: None, None
    size: 10, 10
    canvas:
        Color:
            rgba: GV.RGBA_ERROR if self.running == False else GV.RGBA_SUCCESS
        Ellipse:
            size: self.size
            pos: self.pos
        Color:
            rgba: GV.RGBA_BLACK
        Line:
            width: 1
            circle: self.x + 5, self.y + 5, 6

# ----- Voice Spinner and Spinner Option ----------------------------------------------------------------------------- #
<VoiceSpinner>:
    size_hint: None, None
    size: 150, 28
    background_normal: ''
    background_color: GV.RGBA_BG_LIGHT
    disabled: True
    opacity: 0
    canvas:
        Color:
            rgba: GV.RGBA_BG_DARK
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1

<VoiceSpinnerOption>:
    size_hint: None, None
    size: 150, 28
    background_normal: ''
    background_color: GV.RGBA_BG_LIGHT
    canvas:
        Color:
            rgba: GV.RGBA_BG_DARK
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1.2