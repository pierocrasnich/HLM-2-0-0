# ----- Classe grafica pulsanti di modifica dei file JSON ----- #
<EditJsonButton>:
    size: 200, 50
    size_hint: None, None
    font_size: 21
    background_down: ''
    background_normal: ''
    background_color: (47/255, 50/255, 57/255, 1) if self.state=='normal' else (150/255, 200/255, 255/255, .5)
    canvas:
        Color:
            rgba: 150/255, 200/255, 255/255, 1
        Line:
            width: 1
            rectangle: self.x + 1, self.y + 1, self.width - 1, self.height - 1


