#            Rectangle:
#                pos: self.x + 4, self.y + 4
#                size: self.width - 8, self.height - 8
    Button:
        id: _obsc_row_deck
        size_hint: None, 1
        width: 200
        color: GV.RGBA_WHITE50
        font_size: 16
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        padding: 0, 0
        background_color: 0, 0, 0, 0
        on_release: _obsc_row_deck_dropdown.open(self)
        on_parent:  _obsc_row_deck_dropdown.dismiss()
        canvas.before:
            Color:
                rgba: ( 56/255, 60/255, 69/255, 1)
            Rectangle:
                pos: self.x + 1, self.y + 2
                size: self.width - 2, self.height - 3
    DropDown:
        obsc_row_deck: _obsc_row_deck
        id: _obsc_row_deck_dropdown
        on_select: self.obsc_row_deck.text = '{}'.format(args[1])
        canvas.before:
            Color:
                rgba: GV.RGBA_BG_DARK
            Rectangle:
                pos: self.x + 1, self.y + 1
                size: self.width - 2, self.height - 2
