# ----- Style Row inside list ---------------------------------------------------------------------------------------- #
<ObjectBoxRow>:
    obsc_row_count: _obsc_row_count
    obsc_row_system: _obsc_row_system
    obsc_row_name: _obsc_row_name
    obsc_row_address: _obsc_row_address
    obsc_row_deck: _obsc_row_deck
    obsc_row_deck_dropdown: _obsc_row_deck_dropdown
    obsc_row_posx: _obsc_row_posx
    obsc_row_posy: _obsc_row_posy
    obsc_row_rotate: _obsc_row_rotate
    orientation: 'horizontal'
    size_hint: 1, None
    height: 30
    canvas:
        Color:
            rgba: ( 83/255, 88/255, 99/255, 1)
        Rectangle:
            pos: self.x + 1, self.y + 1
            size: self.width - 2, self.height - 1
    Label:
        id: _obsc_row_count
        size_hint: None, 1
        width: 50
        color: GV.RGBA_WHITE50
        font_size: 16
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        padding: 0, 0
    Label:
        id: _obsc_row_system
        size_hint: None, 1
        width: 100
        color: GV.RGBA_WHITE50
        font_size: 16
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        padding: 0, 0
#        canvas.before:
#            Color:
#                rgba: ( 83/255, 88/255, 99/255, 1)
#            Rectangle:
#                pos: self.x + 4, self.y + 4
#                size: self.width - 8, self.height - 8
    Label:
        id: _obsc_row_name
        size_hint: None, 1
        width: 150
        color: GV.RGBA_WHITE50
        font_size: 16
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        padding: 0, 0
