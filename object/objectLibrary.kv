<ObjPLCM>:
    size_hint: None, None
    size: 50, 50
    color_fill: GV.OBJ_RGB_NO_DATA
    background_normal: ''
    background_down: ''
    background_color: 0, 0, 0, 0
    Image:
        source: GV.DIR_OBJ + "plcMaster.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        color: self.parent.color_fill


