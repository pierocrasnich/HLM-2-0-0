<ObjHL>:
    size_hint: None, None
    size: 50, 50
    color_fill: GV.OBJ_RGB_NO_DATA
    color_fill_sx: GV.OBJ_RGB_NO_DATA
    color_fill_sx_off: 0
    color_fill_dx: GV.OBJ_RGB_NO_DATA
    color_fill_dx_off: 0
    angle_obj: 0
    background_normal: ''
    background_down: ''
    background_color: 0, 0, 0, 0
    Image:
        source: GV.DIR_OBJ + "hl_light_dx.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y + 15
        color: self.parent.color_fill_dx
        opacity: self.parent.color_fill_dx_off
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.parent.angle_obj
                axis: 0, 0, 1
                origin: root.center
        canvas.after:
            PopMatrix
    Image:
        source: GV.DIR_OBJ + "hl.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        color: self.parent.color_fill
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.parent.angle_obj
                axis: 0, 0, 1
                origin: root.center
        canvas.after:
            PopMatrix
    Image:
        source: GV.DIR_OBJ + "hl_light_sx.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y - 20
        color: self.parent.color_fill_sx
        opacity: self.parent.color_fill_sx_off
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.parent.angle_obj
                axis: 0, 0, 1
                origin: root.center
        canvas.after:
            PopMatrix

<ObjBntRotate>:
    size_hint: None, None
    size: 10, 10
    background_normal: ''
    background_down: ''
    background_color: 0, 0, 0, 0
    on_press: self.rotate_obj()
    Image:
        source: GV.DIR_ICONS + "ObjRotate.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y

<ObjTooltip>:
    size_hint: None, None
    size: self.texture_size[0] + 10, self.texture_size[1] + 10
    font_size: 16
    color: GV.RGBA_BG_DARK
    markup: True
    canvas.before:
        Color:
            rgba: GV.RGBA_BLACK50
        RoundedRectangle:
            size: self.size
            pos: self.x + 5, self.y - 5
            radius: [5]
        Triangle:
            points:self.x + 5 ,self.y , self.x + 15, self.y, self.x + 10 ,self.y - 8
        Color:
            rgba: GV.RGBA_ORANGE
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]
        Triangle:
            points:self.x + 10 ,self.y , self.x + 20, self.y, self.x + 10 ,self.y - 10
