###################################### Classe Main menu Button STYLE ###################################################
<MainMenuButton>:
    group: 'selectButton'
    size: 200, 150
    size_hint: None, None
    font_size: 21
    text_size: self.size
    halign: 'center'
    valign: 'bottom'
    padding_y: 25
    background_down: ''
    background_normal: ''
    background_color: (47/255,50/255,57/255,1) if self.state=='normal' else (56/255, 60/255, 69/255, 1)
    canvas:
        Color:
            rgba: (56/255, 60/255, 69/255, 1)
        Line:
            rectangle: self.x, self.y, self.width, self.height
